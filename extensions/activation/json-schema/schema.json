{
  "$schema":"http://json-schema.org/draft-07/schema#",
  "$id":"schema.json#",
  "title":"Planet asset activation Extension",
  "description":"Planet asset activation extension to a STAC Item",
  "allOf":[
    {
      "$ref": "../../../item-spec/json-schema/item.json"
    },
    {
      "$ref":"#/definitions/assets"
    }
  ],
  "definitions":{
    "assets":{
        "type": "object",
        "required": [
        "properties"
      ],
      "properties":{
        "properties":{
          "type":"object",
          "required":[
            "pla:status"
          ],
          "properties":{
            "pla:status":{
              "title":"Asset state",
              "type":[
                "string",
                "null"
              ],
              "enum": [
                "inactive",
                "activating",
                "active"
              ]
            },
            "pla:activate_href":{
              "title":"Asset activation URL",
              "type":[
                "string",
                "null"
              ]
            }
          }
        }
      }
    }
  }
}
